<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100">

        <TextView
            android:gravity="center"
            android:text="TextView2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/rt_ad_txt_username"/>

        <TextView
            android:gravity="center"
            android:text="TextView3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/rt_ad_txt_date"
            android:layout_below="@+id/rt_ad_txt_username"/>

        <TextView
            android:gravity="center"
            android:text="TextView3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/rt_ad_txt_distance"
            android:layout_below="@+id/rt_ad_txt_date"/>

        <TextView
            android:gravity="center"
            android:text="TextView4"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/rt_ad_txt_duration"
            android:layout_below="@+id/rt_ad_txt_distance"/>
    </LinearLayout>

</LinearLayout>